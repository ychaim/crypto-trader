<script type="text/javascript">

    $(document).ready(function () {

        let bidCsvContent = "Price,Size,Number\r\n";
        {{#each bids}}
            bidCsvContent += "{{this.[0]}},{{this.[1]}},{{this.[2]}}\r\n";
        {{/each}}

        bidGraph = new Dygraph(
                // containing div
                document.getElementById("bidgraph"),
                bidCsvContent);

        let askCsvContent = "Price,Size,Number\r\n";
        {{#each asks}}
            askCsvContent += "{{this.[0]}},{{this.[1]}},{{this.[2]}}\r\n";
        {{/each}}

        askGraph = new Dygraph(
                // containing div
                document.getElementById("askgraph"),
                askCsvContent);
    });
</script>