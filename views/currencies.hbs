<h1 xmlns="http://www.w3.org/1999/html">{{title}}</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped">

                <thead>
                <tr>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Min size</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>

                {{#each data}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.id}}</td>
                        <td>{{this.min_size}}</td>
                        <td>{{this.status}}</td>
                    </tr>
                {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>